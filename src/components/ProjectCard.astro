---
interface Props {
  href: string;
  title: string;
  role: string;
  imageUrl: string;
  imageAlt?: string;
  external?: boolean;
  frameBg?: string;
}

const {
  href,
  title,
  role,
  imageUrl,
  imageAlt = title,
  external = false,
  frameBg,
} = Astro.props;
---

<a href={href} class="content">
  <div class="content-card card d-flex flex-column gap-3">
    <figure
      class={`image-wrapper rounded d-flex flex-column flex-items-center flex-justify-end ${frameBg ? "-frame" : ""}`}
      style={frameBg ? `background-color: ${frameBg}` : undefined}
    >
      <img
        src={imageUrl}
        alt={imageAlt}
        loading="lazy"
        class="image bg-subtle"
        width="1110"
        height="773"
      />
    </figure>
    <div class="content d-flex flex-justify-between gap-2">
      <div class="info">
        <h3 class="title">{title}</h3>
        <div class="description">{role}</div>
      </div>
      {
        external && (
          <div class="icon color-fg-muted mr-1">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="trailingIcon"
            >
              <path d="M7 7h10v10" />
              <path d="M7 17 17 7" />
            </svg>
          </div>
        )
      }
    </div>
  </div>
</a>

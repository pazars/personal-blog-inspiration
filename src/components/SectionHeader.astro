---
interface Props {
  id: string;
  title: string;
  showDot?: boolean;
  class?: string;
}

const { id, title, showDot = false, class: className = "py-3" } = Astro.props;
---

<div
  id={id}
  class={`header-row d-flex flex-items-center flex-justify-between ${className}`}
>
  <div class="content d-flex flex-items-center full-width" tabindex="0">
    <a href={`#${id}`} class="icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path
          d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
        ></path>
        <path
          d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
        ></path>
      </svg>
    </a>
    {
      showDot ? (
        <p class="title -mini my-0">{title}</p>
      ) : (
        <h2 class="title -mini">{title}</h2>
      )
    }
    {showDot && <div class="pulsing-dot ml-2" />}
  </div>
</div>

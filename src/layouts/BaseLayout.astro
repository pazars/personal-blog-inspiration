---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Product designer" } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <script is:inline>
      (function(){var t=sessionStorage.getItem("theme")||(window.matchMedia("(prefers-color-scheme: dark)").matches?"dark":"light");document.documentElement.classList.add(t)})();
    </script>
  </head>
  <body>
    <slot />
    <script is:inline src="/script.js"></script>
  </body>
</html>

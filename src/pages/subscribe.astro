---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import NewsletterForm from "../components/NewsletterForm.astro";
import Footer from "../components/Footer.astro";

const site = {
  name: "Jane Doe",
  role: "Creative technologist",
  company: "Acme Labs",
  email: "jane@example.com",
};
---

<BaseLayout title={`Subscribe · ${site.name}`}>
  <Header
    name={site.name}
    role={site.role}
    company={site.company}
    email={site.email}
  />

  <main>
    <section>
      <h1 class="mb-7">Stay in the loop</h1>
    </section>

    <NewsletterForm
      heading="Monthly update"
      description="I write about engineering, craft, and the tools I use. Once a month I send a short summary of what I've published — no spam, unsubscribe anytime."
    />
  </main>

  <Footer email={site.email} />
</BaseLayout>
